# =============================================================================
# AI Career Coach MVP - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# SECURITY: Never commit .env files with real credentials to version control
# =============================================================================

# -----------------------------------------------------------------------------
# OpenAI SDK Configuration (Ollama / Open WebUI)
# -----------------------------------------------------------------------------
# For local Ollama: http://localhost:11434/v1
# For remote: https://your-ollama-server.com/v1
OPENAI_BASE_URL=http://localhost:11434/v1

# API Key - Use "ollama" for local Ollama without auth
# For Open WebUI, use your JWT token
OPENAI_API_KEY=ollama

# LLM Model - Examples: llama3.2, mistral, granite4:7b
OPENAI_MODEL=granite4:7b

# Embedding Model for skill matching
OPENAI_EMBEDDING_MODEL=nomic-embed-text

# LLM Parameters
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=4096
OPENAI_TIMEOUT=120

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
# Development: http://localhost:3000
# Production: https://your-domain.com
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
MAX_UPLOAD_SIZE_MB=10
UPLOAD_TEMP_DIR=/tmp/career-coach
ALLOWED_EXTENSIONS=.pdf,.docx,.txt

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
